<h1>{{title}}</h1>
<form action="/alunos/create" method="post">
<div class="mb-3">
    <label class="form-label">Nome</label>
    <input type="text" name="nome" class="form-control" value="{{aluno.nome}}">
</div>
<div class="mb-3">
    <label class="form-label">Matricula</label>
    <input type="text" name="matricula" class="form-control" value="{{aluno.matricula}}">
<div class="mb-3">
    <label class="form-label">Data de Nacimento</label>
    <input type="text" name="data_nascimento" class="form-control" value="{{aluno.data_nascimento}}">
<div class="mb-3">
    <label class="form-label">Email</label>
    <input type="text" name="email" class="form-control" value="{{aluno.email}}">
</div>
<input type="submit" id="submit" value="{{buttonText}}">
</form>